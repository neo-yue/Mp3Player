<UserControl x:Class="Yue_mp3Player.Playing_Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yue_mp3Player"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid  Opacity="0.8">
        <Grid.RowDefinitions>

            <RowDefinition Height="1*"/>

            <RowDefinition Height="1*"/>

            <RowDefinition Height="1*"/>



        </Grid.RowDefinitions>

        <TextBox x:Name="titleBox" Grid.Row="0"    Width="auto" FontSize="24" HorizontalAlignment="Right"/>
        <TextBox x:Name="artistsBox" Grid.Row="1"   Width="auto" FontSize="24" HorizontalAlignment="Right"/>
        <TextBox x:Name="albumYearBox" Grid.Row="2"   Width="auto" FontSize="24" HorizontalAlignment="Right"/>

    
    </Grid>
</UserControl>
